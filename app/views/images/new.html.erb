<% meta_description "Image Mapper is a web application that makes it dead easy to create HTML image maps." %>
<% meta_keywords "image map, html image map, image mapping, html image mapping, image links, web development, web design, developer tools" %>
<% title "Image Mapper", false %>

<h2 id="step_one">1. Upload your image.</h2>

<% form_for @image, :html => { :multipart => true } do |f| %>
	<p><%= f.file_field :photo %></p>
	<p class="upload_btn"><%= image_submit_tag "/images/upload_btn.png", :class => 'button' %></p>
<% end %>


<h2 id="step_two">2. Map your image.</h2>
<div id="toolbar">
	<p id="new_hotspot">
		<%= link_to image_tag("hotspot_btn.png"), "#", :class => 'button' %>
	</p>
	<p id="edit_links">
		<%= link_to "Undo", "#", :id => "undo" %> |
		<%= link_to "Redo", "#", :id => "redo" %>
	</p>
</div><!-- toolbar -->

<div class="clear"></div>

<div id="user_image">
	<% if @uploaded_image.blank? %>
		<%= image_tag("/photos/original/missing.png") %>
	<% else %>
		<%= image_tag(@uploaded_image.photo.url) %>
	<% end %>
	<div id="myCanvas"></div>
</div>

<div class="clear"></div>

<h2>3. Get your code.</h2>
<div id="output_code">
	<%= text_area :image, :name, :id => "code", :name => "code" %>
</div>